#!/bin/bash

echo "Sourcing .phwlfns_bash"

# this associative array gives mappings between drive names and uuids 
declare -A TDISKS=(
	["wddisk"]="/dev/disk/by-uuid/5b5ac122-f46a-4307-8bfd-463bc9ca818a" 
	["troutdisk"]="/dev/disk/by-uuid/f3bacd55-843f-42c9-af34-b5cb43f73d00"
)

function luksmount() {
	if [[ $# -ne 2 ]]
	then
		echo "Usage: luksmount blkdev name"
	else
		echo "mounting $1 as $2"
		sudo cryptsetup luksOpen $1 $2
		sudo mount /dev/mapper/$2 /srv/$2
	fi
}

function luksumount() {
	if [[ $# -ne 2 ]]
	then
		echo "Usage: luksumount blkdev name"
	else
		echo "umounting $1 $2"
		sudo umount /srv/$2
		sudo cryptsetup luksClose /dev/mapper/$2
	fi
}

function sambamount() {
	if [[ $# -ne 2 ]]
	then
		echo "$0: bad call"
	else
		echo "sambamount $1 $2"
		sudo mount.cifs  $1 $2 -o username=phwl
	fi
}

function mountall() {
	for i in "${!TDISKS[@]}"; do
		# echo "luksmount ${TDISKS[$i]} $i"
		luksmount ${TDISKS[$i]} $i
	done
}

function umountall() {
	for i in "${!TDISKS[@]}"; do
		luksumount ${TDISKS[$i]} $i
	done
}

function mountcod() {
	# sudo mount.cifs  //cod.local/cod-share /srv/coddisk -o username=phwl
	sambamount  "//cod.local/cod-share" "/srv/coddisk"
}

macexclude() {
    EX="--exclude .SD_store --exclude .Spotlight-V100 --exclude .fseventsd"
    cmd="rsync $EX $*"
    echo $cmd
    eval "$cmd"
}

t7-fromtrout() {
  macexclude -Phav --delete --exclude Sgen/ 192.168.1.109:/srv/wddisk/image/3 /Volumes/t7
}


back2-fromtrout() {
  macexclude -Phav --delete --exclude Sgen/ /srv/wddisk/image/2/data .
}


teval() {
	echo "-- $*"
	eval "/usr/bin/time -v $*"
}

backup-troutdisk-to-wddisk() {
  echo "** Running $0"
  date
  teval 'find /srv/wddisk -print > /srv/troutdisk/data/media/gen/WD.index'
  teval 'rsync -avh --progress /srv/troutdisk/ /srv/wddisk/image/3'

  date
}


function sgt() {
	ssh -NL localhost:${1:-8888}:localhost:${1:-8888} gt.staff.sydney.edu.au
}

function jup() {
	jupyter notebook --no-browser --port ${1:-8888}
}

function sshagent() {
	eval `ssh-agent -s`
	for i in ~/.ssh/*.pub
	do
		echo "- " ssh-add ${i/.pub}
		ssh-add ${i/.pub}
	done
}

sshagent

